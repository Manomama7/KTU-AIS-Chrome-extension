{
  "manifest_version": 2,

  "short_name": "KTU AIS",
  "name": "KTU AIS Chrome extension",
  "version": "0.0.1",
  "description": "Test",

  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },

  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": false
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "alarms",
    "notifications"
  ]
}